set $text-color						#f3f4f5
set $inactive-text-color	#676e7d
set $urgent-bg-color			#e53935

# Font for window titles. Will also be used by the bar unless a different font
# Widow Colours
#                       border			background		text			indicator
client.focused          $bg-color		$bg-color		$text-color		#00f00
client.focused_inactive $inactive-bg-color	$inactive-bg-color	$inactive-text-color	#00f00
client.unfocused       	$inactive-bg-color      $inactive-bg-color      $inactive-text-color    #00f00 
client.urgent           $urgent-bg-color	$urgent-bg-color	$text-color		#00f00

